{
    "manifest_version": 3,
    "name": "Memo Extension",
    "version": "1.0",
    "description": "Save selected text as a memo",
    "permissions": ["activeTab", "storage", "contextMenus"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  